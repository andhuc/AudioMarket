@inject AudioMarketContext dbContext

@model User


<div class="row d-flex justify-content-center text-center">

    <h3 class="fw-bold mt-4">User Update</h3>

    <form asp-action="UpdateUser" asp-route-id="@Model.id" method="post">
        <div class="form-group" style="text-align:center; margin:0.5%">
            <label for="username">Username</label>
            <input style="width:50%; margin: 0 auto;" type="text" id="username" name="username" class="form-control" value="@Model.username" readonly />
        </div>

        <div class="form-group" style="text-align:center; margin:0.5%">
            <label for="role">Role</label>
            <select style="width:50%; margin: 0 auto;" id="role" name="role" value="@Model.role" class="form-select" required">
                <option value="0">User</option>
                <option value="1">Admin</option>
            </select>
        </div>

        <div class="form-group" style="text-align:center; margin:0.5%">
            <label for="name">Name</label>
            <input style="width:50%; margin: 0 auto;" type="text" id="name" name="name" class="form-control" value="@Model.name" required />
        </div>

        <div class="form-group" style="text-align:center; margin:0.5%">
            <label for="status">Status</label>
            <select style="width:50%; margin: 0 auto;" id="status" name="status" class="form-select" required>
                <option value="True">Normal</option>
                <option value="False">Banned</option>
            </select>
        </div>

        <button style="margin:1%" type="submit" class="btn btn-primary">Update</button>

        <div class="form-group mt-3">
            <a asp-action="UserManage" class="btn btn-secondary">Back</a>
        </div>
    </form>
</div>
